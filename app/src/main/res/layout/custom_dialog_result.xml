<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="20dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageViewClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/ic_close"
                tools:ignore="VectorDrawableCompat" />
            <TextView
                android:id="@+id/scoreText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:text="voulez-vous valider vos réponses ?"
                android:layout_marginTop="10dp"
                android:textColor="#F88909"
                android:textSize="30dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="195dp"
                android:layout_height="161dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_baseline_help_24"
                tools:ignore="VectorDrawableCompat" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/validerBtnDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="170dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/shapelogin"
                    android:text="Valider "
                    android:backgroundTint="#F88909"/>
                <Button
                    android:id="@+id/revisertBtnDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="170dp"
                    android:background="@drawable/shapelogin"
                    android:text="réviser "
                    android:backgroundTint="#904e95"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>